# Streamlit Cloud Secrets Configuration
# ========================================
# Copy these settings to your Streamlit Cloud app secrets
# Go to: https://share.streamlit.io/ → Your App → Settings → Secrets

# AWS S3 Configuration
[aws]
AWS_S3_BUCKET_NAME = "your-bucket-name-here"
AWS_S3_KEY = "NASDAQ.csv"
AWS_REGION = "us-east-1"
AWS_ACCESS_KEY_ID = "your-access-key-here"
AWS_SECRET_ACCESS_KEY = "your-secret-key-here"

# Data Loading Configuration
[data]
USE_S3 = "true"
LOCAL_FALLBACK = "NASDAQ.csv"

# ========================================
# How to use in Streamlit Cloud:
# ========================================
# 1. Go to your app on share.streamlit.io
# 2. Click the three dots menu → Settings
# 3. Go to "Secrets" section
# 4. Copy the content above (with your real values)
# 5. Paste into the secrets editor
# 6. Click "Save"
# 7. Your app will automatically restart with the secrets
#
# Note: Secrets in Streamlit Cloud are accessed via:
# st.secrets["aws"]["AWS_S3_BUCKET_NAME"]
# st.secrets["data"]["USE_S3"]
